                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="4dp" />
        </RelativeLayout>

        <!-- 장바구니 아이콘 -->
        <ImageButton
